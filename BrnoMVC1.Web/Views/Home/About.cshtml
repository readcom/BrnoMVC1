@using BrnoMVC1.Web.HTMLHelpers;

@{
    ViewBag.Title = "About";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<p>Use this area to provide additional information.</p>

@if (TempData.ContainsKey("ErrorMessage"))
{
    <div class="alert alert-danger">
        <strong>Danger!</strong> @TempData["ErrorMessage"]
    </div>
}


<!-- Trigger the modal with a button -->
<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Launch demo modal</button>

@Html.ModalDialog("Modalni dialog", "Modal body", "Zavrit")


